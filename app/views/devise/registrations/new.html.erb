<h2>アカウント登録</h2>
<br />
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :名前%><br />
    <%= f.text_field :name, autofocus: true  %>
  </div><br />

  <div class="field">
    <%= f.label :所属組織%><br />
    <%= f.text_field :organization, autofocus: true  %>
  </div><br />

  <div class="field">
    <%= f.label :権限%><br />
    <%= f.select :auth,[['閲覧のみ', '1'], ['閲覧、編集', '3'], ['管理者', '9']] , autofocus: true%> 
  </div><br />

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div><br />

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>桁以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div><br />

  <div class="field">
    <%= f.label :パスワード（確認） %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div><br />

  <div class="actions">
    <%= f.submit "登録" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
