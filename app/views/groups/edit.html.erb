<div class="container" style="background:#FFFFFF; width:320px; padding: 10px;">	
<p>※「<%= @group.name %>」グループの編集</p>
<% if @group.errors.any? %>
<ul>
	<% @group.errors.full_messages.each do |err| %>
		<li><%= err %></li>
	<% end %>
</ul>
<% end %>
<div class="mx-auto">
	<%= form_for(@group, url:{controller:'groups', action:'edit'}) do |form| %>
    <div class="form-group">
		 <label for="name">グループ名：</label>
		<%= form.text_field :name, {class:"form-control"} %>
	</div>
	<div class="text-center">
		<%= form.submit "更新" %>
	</div>
	<% end %>
</div>
</div>
<div class="text-center">
	<p><a href="/groups/">戻る</a></p>
</div>