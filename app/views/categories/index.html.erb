<div class="container" style="background:#FFFFFF; width: 400px; padding: 10px;">
<h4 class="pt-3">
カテゴリ管理画面</h4>
<span class="h6">※カテゴリ一覧</span>
<table class="table table-bordered h6" style="background:#FFFFFF;">
	<thead class="thead-light">
	<tr>
		<th>Id</th><th>カテゴリ名</th><th>編集</th><th>使用</th>
	</tr>
	</thead>
	<% @data.each do |obj| %>
	<tr>
		<td><%= obj.id %></td>
		<td><%= obj.name %></td>
		<td><a href="/categories/edit/<%= obj.id %>">編集</a></td>
		<% if !(obj.del_flg == DelFlg::STOP) %> 
			<td><%= link_to "停止", "/categories/stop/#{obj.id}", method: :patch, data: {confirm: "本当にカテゴリー「#{obj.name}」を使用停止にしますか？？"} %></td>
		<% else %>
			<td><%= link_to "再開", "/categories/restart/#{obj.id}", method: :patch, data: {confirm: "本当にカテゴリー「#{obj.name}」の使用を再開しますか？"} %></td>
		<% end %>
	</tr>
	<% end %>
</table>
</div> 
<br>
<div class="container" style="background:#FFFFFF; width: 400px; padding: 10px;">
<p>※カテゴリの登録</p>
<%= form_for(@category, url:{controller:'categories', action:'add'}) do |form| %>
<table>
    <div class="form-group">
		<td>カテゴリ名：</td>
		<td><%= form.text_field :name, {class:"form-control"} %>
	</div>
</table>
<div class="text-center">
	<%= form.submit "登録" %>
	<% end %>
</div> 
</div>
<div class="text-center">
	<p><a href="/">戻る</a></p>
</div>
<br>