<div class="container" style="background:#FFFFFF; width:320px; padding: 10px;">	
<p>※カテゴリ「<%= @category.name %>」の編集</p>
<% if @category.errors.any? %>
<ul>
	<% @category.errors.full_messages.each do |err| %>
		<li><%= err %></li>
	<% end %>
</ul>
<% end %>
<%= form_for(@category, url:{controller:'categories', action:'edit'}) do |form| %>

    <div class="form-group">
    <label for="name">カテゴリ名：</label>
		<%= form.text_field :name, {class:"form-control"} %>
	</div>
	<div class="text-center">
		<%= form.submit "更新" %>
	</div>
<% end %>
</div>
<div class="text-center">
	<p><a href="/">記事一覧</a></p>
</div>