<div class="container mx-auto pt-3 mt-5" style="background:#FFFFFF; width: 360px;">
<h2>アカウント追加</h2>
<%= form_for(@editAccount, url:{controller:'admins', action:'add'}) do |form| %>
<table>
　　<div class="form-group">
	  <label for="name">名前</label>
      <%= form.text_field :name, {class:"form-control"} %>
	</div>
	<div class="form-group">
	  <label for="organization">所属組織</label>
	  <%= form.text_field :organization, {class:"form-control"} %>
	</div>
	<div class="form-group">
	  <label for="auth">権限</label>
	  <%= form.select :auth, AuthSelect::ADMIN, {}, {class:"form-control w-25"}  %> 
	</div>

    <div class="form-group">
	  <label for="email">Eメールアドレス</label>
	  <%= form.email_field :email, {class:"form-control"} %>
	</div>

    <div class="form-group">
	  <label for="password">パスワード</label>
	  <%= form.password_field :password, {class:"form-control"} %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %>桁以上</em>
    <% end %>
  　</div>

    <div class="form-group">
	  <label for="password_confirmation">パスワード</label>
	  <%= form.password_field :password_confirmation, {class:"form-control"} %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %>桁以上</em>
    <% end %>
  　</div>

	<%= form.submit "登録" %>

</table>
	<% end %>
<p><a href="/admins/index">戻る</a></p>
</div>