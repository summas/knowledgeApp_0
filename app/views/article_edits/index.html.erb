<h2 class="display-6 text-primary">
記事一覧</h2>
<p>※『<%= current_account.name %>』の投稿記事一覧</p>

<div class="container">	
	<table class="table table-bordered table-responsive h6 w-100" style="background:#FFFFFF;" >
		<thead class="thead-light">
			<tr>
				<th>ID</th><th >タイトル</th><th>投稿者</th><th>カテゴリー</th><th>グループ</th><th>公開範囲</th><th></th><th></th>
			</tr>
		</thead>
		<% @data.each do |obj| %>
		<tr>
			<td><%= obj.id %></td>
			<td><%= obj.title %></td>
			<td><%= obj.account.name %></td>
			<td><%= obj.category.name %></td>
			<td><%= obj.group.name %></td>
			<td><%= obj.disclosureRange.name %></td>
			<td><a href="/article_edits/<%= obj.id %>">編集</a></td>
			<td><a href="/article_edits/delete/<%= obj.id %>">削除</a></td>
		</tr>
		<% end %>
	</table>
	<div class="navigate">
		<div><%= paginate @data %></div>
	</div>
</div>

<p><%= link_to :back do %>戻る<% end %></p>