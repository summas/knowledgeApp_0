<h1 class="display-4 text-primary">
Articles#add</h1>
<p>※ブログの記事の投稿</p>
<% if @article.errors.any? %>
<ul>
	<% @article.errors.full_messages.each do |err| %>
		<li><%= err %></li>
	<% end %>
</ul>
<% end %>

	<%= form_for(@article, url:{controller:'article_edits', action:'add'}) do |form| %>
	<div class="form-group">
	  <label for="title">タイトル</label>
      <%= form.text_field :title, {class:"form-control"} %>
	</div>
	<div class="form-group">
	  <label for="content">記事</label>
	  <%= form.rich_text_area :content %>
	</div>
	<div class="form-group">
	  <label for="category_id">カテゴリー:</label>
	  <%= form.select :category_id, @util.get_category_hash(@categories)%> 
	</div>
	<%= form.submit "投稿" %>
	<% end %>

<a href="/admins/menu/">管理画面</a>
<hr>
