<h5 class="display-5 text-secondary">
記事の投稿</h5>

<% if @article.errors.any? %>
<ul>
	<% @article.errors.full_messages.each do |err| %>
		<li><%= err %></li>
	<% end %>
</ul>
<% end %>
<div class="container" style="background:#FFFFFF;">
	<%= form_for(@article, url:{controller:'article_edits', action:'add'}) do |form| %>
	<div class="form-group pt-3">
		<label for="title">タイトル</label>
		<%= form.text_field :title, {class:"form-control"} %>
	</div>
	<div class="form-group">
		<label for="content">記事</label>
		<%= form.rich_text_area :content %>
	</div>
	<div class="form-group">
		<label for="category_id">カテゴリー：</label>
		<%= form.select :category_id, @util.get_model_hash(@categories)%> 
	</div>
	<div class="form-group">
		<label for="group_id">グループ:</label>
		<%= form.select :group_id, @util.get_model_hash(@groups)%> 
	</div>
	<div class="form-group">
		<label for="disclosureRange_id">公開範囲:</label>
		<%= form.select :disclosureRange_id, @util.get_model_hash(@disclosureRanges)%> 
	</div>
	<div class="form-group">
		<label for="image">サムネイル:</label>
		<%= form.file_field :image %>
	</div>
	<div class="form-group">
	  <%= form.hidden_field :account_id, value: @account.id%> 
	</div>
	<%= form.submit "投稿" %>
	<% end %>
	</div>
<div class="p-3"><a href="/">戻る</a></div>

